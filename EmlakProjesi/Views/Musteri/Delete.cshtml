@model EntityLayer.Entire.Musteri
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Delete" asp-controller="Musteri" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group row">
        <label for="text" class="col-4 col-form-label">Villa Number</label>
        <div class="col-8">
            <input id="text" asp-for="MusteriAd"  placeholder="Musteri Adını girin" type="text" class="form-control">
             <span asp-validation-for="MusteriAd" class="text-danger"></span>
        </div>
    </div>
   
     <div class="form-group row">
        <label for="text" class="col-4 col-form-label">Email</label>
        <div class="col-8">
            <input id="text" asp-for="Email"  placeholder="Emailinizi girin" type="text" class="form-control">
             <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label for="text" class="col-4 col-form-label">Şifre</label>
        <div class="col-8">
            <input id="text" asp-for="Password" placeholder="Şifrenizi girin" type="text" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    
    
    
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Gönder Kayde</button>
        </div>
    </div>
</form>

