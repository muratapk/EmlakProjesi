@model EntityLayer.Entire.Musteri
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if(TempData["errorMessage"]!=null)
{
    <h1>@TempData["errorMessage"]</h1>
}
<form method="post" asp-action="Edit" asp-controller="MusteriApi">
    <input type="hidden" asp-for="MusteriId"/>
    <div class="form-group row">
        <label for="MusteriAdi" class="col-4 col-form-label">Müşteri Adı</label>
        <div class="col-8">
            <input id="MusteriAdi" asp-for="MusteriAd" placeholder="Müşteri Adını Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="Password" class="col-4 col-form-label">Müşteri Şifresi</label>
        <div class="col-8">
            <input id="Password" asp-for="Password" placeholder="Müşteri Şifresini Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="Email" class="col-4 col-form-label">Müşteri Email</label>
        <div class="col-8">
            <input id="Email" asp-for="Email" placeholder="Müşteri Email Adresini Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
