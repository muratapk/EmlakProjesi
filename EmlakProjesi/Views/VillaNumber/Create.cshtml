@model EntityLayer.Entire.VillaNumber
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Create" asp-controller="VillaNumber" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <label for="text" class="col-4 col-form-label">Villa Number</label>
        <div class="col-8">
            <input id="text" asp-for="Villa_Number"  placeholder="Villa Number" type="text" class="form-control">
             <span asp-validation-for="Villa_Number" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="textarea" class="col-4 col-form-label">Description</label>
        <div class="col-8">
            <select class="form-control" asp-for="VillaId" asp-items="@ViewData["Villam"] as IEnumerable<SelectListItem>">
                <option value="">Seçiminizi Yapın</option>
            </select>
            <span asp-validation-for="VillaId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="text1" class="col-4 col-form-label">Special Details</label>
        <div class="col-8">
            <textarea asp-for="SpecialDetails" class="form-control"></textarea>
            <span asp-validation-for="SpecialDetails" class="text-danger"></span>
        </div>
    </div>
    
    
    
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Gönder Kayde</button>
        </div>
    </div>
</form>

